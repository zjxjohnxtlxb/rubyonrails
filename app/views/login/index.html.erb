<%= form_for @user, url: login_path(@user),:html => { :class => 'text-left',:style => 'background-color: #f2f2f2'} do |f| %>
    <div class="row">
        <div class="col"></div>
        <div class="col text-center">
            <%= image_tag ("logo.png")%>
        </div>
        <div class="col"></div>
    </div>

    <div class="row">
        <div class="col"></div>
        <div class="col text-center">
            <div class="form-group">
                <%= f.label :username, class: "col-md-4 control-label" %>
                <%= f.text_field :username, :html => { :placeholder => 'Enter username'} %>
            </div>
            <div class="form-group">
                <%= f.label :pwd, class: "col-md-4 control-label" %>
                <%= f.text_field :pwd, :html => { :placeholder => 'Enter pwd'} %>
            </div>
        </div>
        <div class="col"></div>
    </div>

    <div class="row">
        <div class="col"></div>
        <div class="col text-center">
            <%= f.submit "Submit" %>
            <button type="reset">Reset</button>
        </div>
        <div class="col">
        </div>
    </div>
<% end %>